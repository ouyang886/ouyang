#include<stdio.h>
int a[1000][1000];
int b[1000][1000];
int main()
{
	int i,j,i1,j1;
	printf("请输入行数；");
	scanf("%d",&i1);
	printf("请输入列数；");
	scanf("%d",&j1);
	printf("请输入的矩阵的元素；\n");
	for(i=0;i<i1;i++)
	{
		for(j=0;j<j1;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	printf("输入的矩阵为：\n");
	for(i=0;i<i1;i++)
	{
		for(j=0;j<j1;j++)
		{
			printf("%-3d",a[i][j]);
		}printf("\n");
	}
	printf("输出的矩阵为：\n");
	for(j=0;j<j1;j++)
	{
		for(i=0;i<i1;i++)
		{
			printf("%d",a[i][j]);
		}printf("\n");
	}
} 
